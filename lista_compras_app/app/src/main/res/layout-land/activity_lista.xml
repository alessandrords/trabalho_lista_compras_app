<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/categoriaId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/quantidadeId"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_toEndOf="@+id/quantidadeId"
        android:layout_toRightOf="@+id/quantidadeId" />

    <CheckBox
        android:id="@+id/perecivelId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btSalvarId"
        android:layout_alignLeft="@+id/btSalvarId"
        android:layout_alignStart="@+id/btSalvarId"
        android:layout_marginBottom="13dp"
        android:text="perecÃ­vel" />

    <Button
        android:id="@+id/btSalvarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALVAR"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/quantidadeId"
        android:layout_alignStart="@+id/quantidadeId" />

    <TextView
        android:id="@+id/nomeListaId"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/produtoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Produto"
        android:inputType="textPersonName"
        android:layout_below="@+id/nomeListaId"
        android:layout_alignLeft="@+id/nomeListaId"
        android:layout_alignStart="@+id/nomeListaId"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="27dp" />

    <EditText
        android:id="@+id/quantidadeId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Qtde.:"
        android:inputType="number"
        android:layout_below="@+id/produtoId"
        android:layout_alignLeft="@+id/produtoId"
        android:layout_alignStart="@+id/produtoId"
        android:layout_marginTop="17dp" />

    <ListView
        android:id="@+id/listViewId"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_width="147dp"
        android:layout_height="290dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/nomeListaId"
        android:layout_alignEnd="@+id/nomeListaId" />
</RelativeLayout>